{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb",
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "semi": [
            2,
            "never"
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "camelcase": 0,
        "no-console": 0,
        "class-methods-use-this": 0,
        "react/jsx-uses-vars": "error",
        "react/jsx-uses-react": "error"
    }
}